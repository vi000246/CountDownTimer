      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }
    .card {
      padding: 1rem;
      border-radius: 0.5rem;
      color: white;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .easy {
      background-color: #2ecc71;
    }
    .medium {
      background-color: #f39c12;
    }
    .hard {
      background-color: #e74c3c;
    }
    .count {
      font-size: 2rem;
      font-weight: bold;
    }
    .label {
      font-size: 0.9rem;
      opacity: 0.85;
    }
